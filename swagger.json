{
    "openapi": "3.0.0",
    "info": {
      "title": "Events API",
      "version": "1.0.0",
      "description": "API для работы с событиями (тренировками) в спортивной школе"
    },
    "paths": {
      "/events": {
        "get": {
          "summary": "Получить все события",
          "operationId": "getAllEvents",
          "responses": {
            "200": {
              "description": "Список всех событий",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/Event"
                    }
                  }
                }
              }
            },
            "500": {
              "description": "Ошибка сервера"
            }
          }
        },
        "post": {
          "summary": "Создать новое событие",
          "operationId": "createEvent",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Event"
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Событие успешно создано",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/Event"
                  }
                }
              }
            },
            "400": {
              "description": "Ошибка валидации данных"
            },
            "500": {
              "description": "Ошибка сервера"
            }
          }
        }
      },
      "/events/{eventId}": {
        "get": {
          "summary": "Получить событие по ID",
          "operationId": "getEventById",
          "parameters": [
            {
              "name": "eventId",
              "in": "path",
              "required": true,
              "description": "ID события",
              "schema": {
                "type": "string"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Событие найдено",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/Event"
                  }
                }
              }
            },
            "404": {
              "description": "Событие не найдено"
            },
            "500": {
              "description": "Ошибка сервера"
            }
          }
        },
        "put": {
          "summary": "Обновить событие",
          "operationId": "updateEvent",
          "parameters": [
            {
              "name": "eventId",
              "in": "path",
              "required": true,
              "description": "ID события для обновления",
              "schema": {
                "type": "string"
              }
            }
          ],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Event"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Событие обновлено",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/Event"
                  }
                }
              }
            },
            "400": {
              "description": "Ошибка валидации данных"
            },
            "404": {
              "description": "Событие не найдено"
            },
            "500": {
              "description": "Ошибка сервера"
            }
          }
        },
        "delete": {
          "summary": "Удалить событие",
          "operationId": "deleteEvent",
          "parameters": [
            {
              "name": "eventId",
              "in": "path",
              "required": true,
              "description": "ID события для удаления",
              "schema": {
                "type": "string"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Событие успешно удалено",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "message": {
                        "type": "string",
                        "example": "Event successfully deleted"
                      }
                    }
                  }
                }
              }
            },
            "404": {
              "description": "Событие не найдено"
            },
            "500": {
              "description": "Ошибка сервера"
            }
          }
        }
      }
    },
    "components": {
      "schemas": {
        "Event": {
          "type": "object",
          "properties": {
            "_id": {
              "type": "string",
              "example": "event1_20240925"
            },
            "date": {
              "type": "string",
              "format": "date-time",
              "example": "2024-09-25T08:00:00.000Z"
            },
            "groupId": {
              "type": "string",
              "example": "group4"
            },
            "groupTitle": {
              "type": "string",
              "example": "Boxing"
            },
            "isCancelled": {
              "type": "boolean",
              "example": false
            },
            "participants": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string",
                    "example": "user1"
                  },
                  "name": {
                    "type": "string",
                    "example": "John"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
  